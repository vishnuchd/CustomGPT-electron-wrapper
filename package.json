{
  "name": "easy-bot-chat",
  "version": "1.0.0",
  "description": "Electron wrapper for CustomGPT with UI customization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:unsigned": "electron-builder",
    "build:signed": "electron-builder && powershell -ExecutionPolicy Bypass -File scripts/sign-windows.ps1 -SkipBuild",
    "sign": "powershell -ExecutionPolicy Bypass -File scripts/sign-windows.ps1 -SkipBuild",
    "sign:verbose": "powershell -ExecutionPolicy Bypass -File scripts/sign-windows.ps1 -SkipBuild -Verbose"
  },
  "keywords": [
    "electron",
    "customgpt"
  ],
  "author": "",
  "license": "MIT",
  "appId": "com.easybot.chat",
  "build": {
    "appId": "com.easybot.chat",
    "productName": "EasyBotChat",
    "files": [
      "main.js",
      "preload.js",
      "customizations.js",
      "EasyBotLogo.png"
    ],
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "EasyBotLogo.png",
      "artifactName": "${productName}-${version}.${ext}",
      "sign": null,
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "EasyBotLogo.png",
      "artifactName": "${productName}-${version}.${ext}",
      "signingHashAlgorithms": [],
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "EasyBotLogo.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
